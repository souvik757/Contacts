<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="start"
            android:background="@drawable/round_user"
            />
        <TextView
            android:id="@+id/DBUserID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="25dp"
            android:text="USER_ICON99999"
             />
    </androidx.appcompat.widget.Toolbar>
        <EditText
            android:id="@+id/FirstName"
            android:text="Souvik"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:background="@drawable/general_bg_btn_black"
            android:padding="12dp"
            android:textColor="@color/black"
            android:textSize="20dp" />
        <EditText
            android:id="@+id/MiddleName"
            android:text=""
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:background="@drawable/general_bg_btn_black"
            android:padding="12dp"
            android:textColor="@color/black"
            android:textSize="20dp" />
        <EditText
            android:id="@+id/LastName"
            android:text="Maity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:background="@drawable/general_bg_btn_black"
            android:padding="12dp"
            android:textColor="@color/black"
            android:textSize="20dp" />
        <EditText
            android:id="@+id/Email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:background="@drawable/general_bg_btn_black"
            android:padding="12dp"
            android:textColor="@color/black"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/Phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:background="@drawable/general_bg_btn_black"
            android:padding="12dp"
            android:textColor="@color/black"
            android:textSize="20dp" />
        <EditText
            android:id="@+id/Password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:background="@drawable/general_bg_btn_black"
            android:padding="12dp"
            android:textColor="@color/black"
            android:textSize="20dp" />

        <androidx.appcompat.widget.Toolbar
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <androidx.appcompat.widget.AppCompatButton
                android:onClick="DeleteButton"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="start"
                android:background="@drawable/generel_bg_btn_red_var"
                android:text="delete"
                android:textAllCaps="false"
                android:textColor="@color/white" />

            <androidx.appcompat.widget.AppCompatButton
                android:onClick="OnEditButton"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="end"
                android:background="@drawable/generel_bg_btn_green"
                android:text="save"
                android:textAllCaps="false"
                android:textColor="@color/black" />
        </androidx.appcompat.widget.Toolbar>

    </LinearLayout>
</ScrollView>